@{
    ViewData["Title"] = "Calculator";
    // You can change your hourly rate here
    var hourlyRate = 25;
}

<h1 class="mb-3">Tutoring Cost Calculator</h1>

<p>
    Enter how many hours you would like tutoring. Weâ€™ll calculate the total cost based on my hourly rate.
</p>

<div class="mb-3">
    <label for="hours" class="form-label">Hours needed</label>
    <input id="hours" type="number" class="form-control" placeholder="e.g., 2" min="0" step="0.5" />
    <div id="hoursError" class="text-danger mt-1" style="display:none;">
        Please enter a positive number of hours.
    </div>
</div>

<div class="mb-3">
    <label for="rate" class="form-label">Hourly rate ($/hour)</label>
    <input id="rate" type="text" class="form-control" value="@hourlyRate" readonly />
</div>

<div class="mb-3">
    <button id="calcBtn" class="btn btn-success">Calculate Total</button>
</div>

<div class="mb-3">
    <label for="total" class="form-label">Total ($)</label>
    <input id="total" type="text" class="form-control" readonly />
</div>

<div class="mt-3">
    <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Back to Home</a>
</div>

@section Scripts {
    <script src="~/js/calculator.js"></script>
}