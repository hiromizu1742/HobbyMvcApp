@{
    ViewData["Title"] = "Calculator";
    var hourlyRate = 25;
}

<h1>Tutoring Cost Calculator</h1>

<p>Enter the number of tutoring hours needed.</p>

<div class="mb-3">
    <label class="form-label">Hours needed</label>
    <input id="hours" type="number" class="form-control" />
    <div id="hoursError" class="text-danger" style="display:none;">
        Please enter a positive number.
    </div>
</div>

<div class="mb-3">
    <label class="form-label">Hourly Rate ($)</label>
    <input id="rate" type="text" class="form-control" value="@hourlyRate" readonly />
</div>

<button id="calcBtn" class="btn btn-success">Calculate</button>

<div class="mt-3">
    <label>Total</label>
    <input id="total" type="text" class="form-control" readonly />
</div>

@section Scripts {
    <script src="~/js/calculator.js"></script>
}